{
  "extends": [
    ":separateMajorReleases",
    ":ignoreUnstable",
    ":combinePatchMinorReleases",
    ":prImmediately",
    "group:monorepos",
    "group:recommended",
    ":ignoreModulesAndTests",
    ":updateNotScheduled",
    ":autodetectPinVersions",
    ":preserveSemverRanges",
    ":prConcurrentLimit20",
    "workarounds:all"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": [
    "after 5pm every weekday",
    "every weekend",
    "before 9am every weekday"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": ":arrow_up:",
  "semanticCommitScope": null,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üìÅ Dependency Dashboard",
  "dependencyDashboardLabels": ["type: dependencies", "type: maintenance"],
  "labels": ["type: dependencies"],
  "ignoreDeps": ["husky"],
  "stabilityDays": 3,
  "lockFileMaintenance": { "enabled": true, "automerge": true },
  "packageRules": [
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "addLabels": ["type: maintenance"]
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance", "pin"],
      "semanticCommitType": ":pushpin:"
    },
    {
      "matchUpdateTypes": ["rollback"],
      "semanticCommitType": ":arrow_down:"
    },
    {
      "matchUpdateTypes": ["digest", "bump"],
      "semanticCommitType": ":bookmark:"
    },
    {
      "matchDepTypes": ["devDependencies", "dev-dependencies"],
      "automerge": true,
      "stabilityDays": 2,
      "major": {
        "automerge": false
      }
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "stabilityDays": 1,
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "matchPackagePatterns": ["^@types/", "^types-"],
      "stabilityDays": 0,
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
